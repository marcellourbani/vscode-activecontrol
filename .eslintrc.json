{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/semi": [
      "error",
      "never"
    ],
    "curly": "off",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "comma-dangle": [
      0,
      "never"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}