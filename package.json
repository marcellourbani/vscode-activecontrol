{
  "name": "activecontrol",
  "displayName": "ActiveControl",
  "description": "ActiveControl integration for visual studio code",
  "version": "0.0.2",
  "license": "MIT",
  "publisher": "murbani",
  "engines": {
    "vscode": "^1.44.0"
  },
  "author": {
    "email": "marcello.urbani@gmail.com",
    "name": "Marcello Urbani"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcellourbani/vscode-activecontrol.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:adt"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "murbani.vscode-abap-remote-fs"
  ],
  "contributes": {
    "commands": [
      {
        "command": "activecontrol.createform",
        "title": "Create Transport Form"
      }
    ],
    "configuration": {
      "title": "ActiveControl configuration",
      "properties": {
        "activecontrol.url": {
          "title": "Url",
          "type": "string",
          "pattern": "^https?://[^/]+$",
          "description": "ActiveControl domain controller main URL"
        },
        "activecontrol.port": {
          "title": "local server",
          "type": "integer",
          "description": "Port of the local server used to detect form creation",
          "minimum": 1024,
          "maximum": 65535
        },
        "activecontrol.user": {
          "title": "Urer ID",
          "type": "string"
        },
        "activecontrol.transportfilters": {
          "title": "Transport filters",
          "type": "array",
          "description": "If set, transports not matching any of these patterns will be ignored by activecontrol",
          "items": {
            "type": "string",
            "title": "Regular expression matching the relevant transports",
            "examples": [
              "DEVK.*"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "npm run webpack-dev",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/http-proxy": "^1.17.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "fast-xml-parser": "^3.16.0",
    "fp-ts": "^2.5.3",
    "got": "^10.7.0",
    "http-proxy": "^1.18.1",
    "open": "^7.0.3"
  }
}
